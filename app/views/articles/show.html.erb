<div class="container">
    <div class="row justify-content-md-center">
      <div class="col-10 mt-4">
        <div class="card shadow mb-5 bg-body rounded">
          <div class="card-header">
            <%= image_tag "#{@article.user.number.to_i}.png", alt:'icon', width:"50px" %>
            <h3><%= @article.title %></h3>
          </div>
          <div class="card-body">
          <p class="card-text"><%= @article.description %></p>
          <% if logged_in? && @article.user == current_user %>
            <%= link_to t("edit"), edit_article_path(@article), class:"btn btn-outline-success" %> 
            <%= link_to t("delete"), article_path(@article), method: :delete, data: { confirm: t("sure") }, class:"btn btn-outline-danger" %> 
          <% end %>
          </div>
          <div class="card-footer text-muted">
            <small><%= t("created") %> <%= time_ago_in_words(@article.created_at) %> <%= t("ago") %>, <%= t("by") %> <%= @article.user ? @article.user.username : t("unknown") %></small>
          </div>
        </div>
      </div>
    </div>
</div>
<div class="text-center return">
  <p>[ <%= link_to t("return"), articles_path %> ]</p>
</div>
