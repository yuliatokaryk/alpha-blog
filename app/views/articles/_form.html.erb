<% if @article.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <h4 class="alert-heading"><%= t("error") %></h4>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 m-4">
      <%= form_with(model: @article, local:true) do |f| %>
        <div class="mb-3">
          <%= f.label "#{t("title")}:", for:"title", class:"form-label" %>
          <%= f.text_field :title,  class:"form-control", id:"title", placeholder:"Title"%>
        </div>
        <div class="mb-3">
          <%= f.label "#{t("description")}:", for:"description", class:"form-label" %>
          <%= f.text_area :description, class:"form-control", id:"description", rows:"10", placeholder:"Description" %>
        </div>
        <div class="mb-3">
          <%= f.label "#{t("category")}:", for:"category-select", class:"form-label" %>
          <br>
          <%= f.collection_select(:category_ids, Category.all, :id, :name, {:prompt => t("prompt_category")}, {multiple: true, class:"custom-select", id:"category-select", class:"form-control form-select"}) %>
        </div>
        <%= f.submit t("done"), class:"btn button" %>
      <% end %>
    </div>
  </div>
</div>
