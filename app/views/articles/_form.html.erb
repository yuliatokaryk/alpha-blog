<% if @article.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <h4 class="alert-heading">Error!</h4>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 m-4">
      <%= form_with(model: @article, local:true) do |f| %>
        <div class="mb-3">
          <%= f.label :title, for:"exampleFormControlInput1", class:"form-label" %>
          <%= f.text_field :title,  class:"form-control", id:"exampleFormControlInput1", placeholder:"Title" %>
        </div>
        <div class="mb-3">
          <%= f.label :description, for:"exampleFormControlTextarea1", class:"form-label" %>
          <%= f.text_area :description, class:"form-control", id:"exampleFormControlTextarea1", rows:"10" %>
        </div>
        <%= f.submit :Done, class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
<div class="text-center return">
  <p>[ <%= link_to 'Return to articles', articles_path %> ]</p>
</div>
