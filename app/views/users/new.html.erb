<% if @user.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <h4 class="alert-heading"><%= t("error") %></h4>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<h1 class="text-center m-4"><%= t("new_user") %></h1>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 m-4">
      <%= form_with(model: @user) do |f| %>
        <div class="mb-3">
          <%= f.label t("username"), for:"exampleFormControlInput1", class:"form-label" %>
          <%= f.text_field :username,  class:"form-control", id:"exampleFormControlInput1" %>
        </div>
        <div class="mb-3">
          <%= f.label t("email"), for:"exampleFormControlTextarea2", class:"form-label" %>
          <%= f.email_field :email, class:"form-control", id:"exampleFormControlTextarea2" %>
        </div>
        <div class="mb-3">
          <%= f.label t("password"), for:"exampleFormControlTextarea1", class:"form-label" %>
          <%= f.password_field :password, class:"form-control", id:"exampleFormControlTextarea1" %>
        </div>
        <div class="mb-3">
          <%= f.label t("about"), for:"exampleFormControlTextarea3", class:"form-label" %>
          <%= f.text_area :about, class:"form-control", id:"exampleFormControlTextarea3", rows:"5", placeholder:t("about_plch") %>
        </div>
        <%= f.submit t("signup"), class:"btn button" %>
      <% end %>
    </div>
  </div>
</div>
