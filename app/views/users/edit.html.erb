<div class="text-center m-4">
  <h1><%= t("edit_profile") %></h1>
  <%= image_tag "#{@user.number.to_i}.png", alt: 'icon', width:"200px" %>
</div>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 m-4">
      <%= form_with(model: @user) do |f| %>
        <div class="mb-3">
          <%= f.label t("username"), for:"exampleFormControlInput1", class:"form-label" %>
          <%= f.text_field :username,  class:"form-control", id:"exampleFormControlInput1", placeholder:"Enter username" %>
        </div>
        <div class="mb-3">
          <%= f.label t("email"), for:"exampleFormControlTextarea2", class:"form-label" %>
          <%= f.email_field :email, class:"form-control", id:"exampleFormControlTextarea2" %>
        </div>
        <div class="mb-3">
          <%= f.label t("password"), for:"exampleFormControlTextarea1", class:"form-label" %>
          <%= f.password_field :password, class:"form-control", id:"exampleFormControlTextarea1" %>
        </div>
        <div class="mb-3">
          <%= f.label t("about"), for:"exampleFormControlTextarea3", class:"form-label" %>
          <%= f.text_area :about, class:"form-control", id:"exampleFormControlTextarea3", rows:"10", placeholder:t("about_plch") %>
        </div>
        <%= f.submit t("done"), class:"btn button" %>
      <% end %>
      <%= link_to t("delete_profile"), user_path(current_user), class: "mt-3 dropdown-item text-danger", method: :delete, data: { confirm: "Are you sure?" } %> 
    </div>
  </div>
</div>
