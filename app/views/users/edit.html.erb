<h1 class="text-center m-3">Edit your profile</h1>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 m-4">
      <%= form_with(model: @user) do |f| %>
        <div class="mb-3">
          <%= f.label :username, for:"exampleFormControlInput1", class:"form-label" %>
          <%= f.text_field :username,  class:"form-control", id:"exampleFormControlInput1", placeholder:"Enter username" %>
        </div>
        <div class="mb-3">
          <%= f.label :email, for:"exampleFormControlTextarea2", class:"form-label" %>
          <%= f.email_field :email, class:"form-control", id:"exampleFormControlTextarea2" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, for:"exampleFormControlTextarea1", class:"form-label" %>
          <%= f.password_field :password, class:"form-control", id:"exampleFormControlTextarea1" %>
        </div>
        <%= f.submit "Update account", class:"btn button" %>
      <% end %>
      <%= link_to "Delete profile", user_path(current_user), class: "mt-3 dropdown-item text-danger", method: :delete, data: { confirm: "Are you sure?" } %> 
    </div>
  </div>
</div>
