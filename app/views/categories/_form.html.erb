<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 m-4">
      <%= form_with(model: @category, local:true) do |f| %>
        <div class="mb-3">
          <%= f.label "#{t("title")}:", for:"exampleFormControlInput1", class:"form-label" %>
          <%= f.text_field :name,  class:"form-control", id:"exampleFormControlInput1", placeholder:"name"%>
        </div>
        <%= f.submit t("done"), class:"btn button" %>
      <% end %>
    </div>
  </div>
</div>
